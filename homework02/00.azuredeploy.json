{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminUserId": {
          "type": "string"
        },
        "vaultResourceGroup" : {
          "type": "string"
        },
        "vaultName" : {
          "type": "string"
        },
        "secretName" : {
          "type": "string"
        },
        "customData": {
          "type": "string"
        }
    },
    "variables": {
        "repoUri" : "https://raw.githubusercontent.com/msjo66/azureStudy/master/homework01/02VMs/"
    },
    "resources": [
        {
            "apiVersion": "2017-05-10", 
            "name": "vm0", 
            "type": "Microsoft.Resources/deployments", 
            "properties": { 
              "mode": "Incremental", 
              "templateLink": {
                "uri": "[concat(variables('repoUri'),'01.vm.json')]",
                "contentVersion": "1.0.0.0"
              }, 
              "parameters": { 
                "vm_name":{"value": "vm0"},
                "adminUserId":{"value": "[parameters('adminUserId')]"},
                "sshKeyData":{
                  "reference" : {
                    "keyVault" : {
                        "id": "[resourceId(subscription().subscriptionId,  parameters('vaultResourceGroup'), 'Microsoft.KeyVault/vaults', parameters('vaultName'))]"
                    },
                    "secretName": "[parameters('secretName')]"
                  }
                },
                "nic_name":{"value": "vm0nic"},
                "customData":{"value":"[parameters('customData')]"}
              } 
            }
        }
    ]
}
